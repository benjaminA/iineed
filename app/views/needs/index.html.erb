<h1>Listing needs</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Need</th>
    <th>Time</th>
    <th>Location</th>
    <th>Provider</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @needs.each do |need| %>
  <tr>
    <td><%= need.username %></td>
    <td><%= need.need %></td>
    <td><%= need.time %></td>
    <td><%= need.location %></td>
    <td><%= need.provider %></td>
    <td><%= link_to 'Show', need %></td>
    <td><%= link_to 'Edit', edit_need_path(need) %></td>
    <td><%= link_to 'Destroy', need, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

